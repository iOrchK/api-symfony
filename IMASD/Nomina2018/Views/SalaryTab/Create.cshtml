@using Nomina2018.Models
@model Nomina2018.Models.Tabulador

@{
    ViewBag.Title = "Tabulador - Crear";
    List<Empleado> empleados = ViewBag.Empleados;
}

<h2>Crear</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="uk-form-horizontal">
    <h4>Tabulador</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "uk-text-danger" })
    <div class="uk-margin">
        <label class="uk-form-label" for="form-horizontal-text"> Empleado: </label>
        <div class="uk-form-controls">
            @Html.DropDownListFor(model => model.idEmpleado, empleados.Select(x => new SelectListItem { Text = x.GetFullName(), Value = x.idEmpleado.ToString(), Selected = x.idEmpleado == empleados.Select(y => y.idEmpleado).FirstOrDefault() }), new { @class = "uk-select" })
            @Html.ValidationMessageFor(model => model.idEmpleado, "", new { @class = "uk-text-danger" })
        </div>
    </div>

    <div class="uk-margin">
        <label class="uk-form-label" for="form-horizontal-text"> Inicio del periodo: </label>
        <div class="uk-form-controls">
            @Html.EditorFor(model => model.inicioPeriodo, new { htmlAttributes = new { @class = "uk-input", @placeholder="2020-01-01" } })
            @Html.ValidationMessageFor(model => model.inicioPeriodo, "", new { @class = "uk-text-danger" })
        </div>
    </div>

    <div class="uk-margin">
        <label class="uk-form-label" for="form-horizontal-text"> Fin del periodo: </label>
        <div class="uk-form-controls">
            @Html.EditorFor(model => model.finPeriodo, new { htmlAttributes = new { @class = "uk-input", @placeholder = "2020-01-15" } })
            @Html.ValidationMessageFor(model => model.finPeriodo, "", new { @class = "uk-text-danger" })
        </div>
    </div>

    <div class="uk-margin">
        <label class="uk-form-label" for="form-horizontal-text"> Sueldo base: </label>
        <div class="uk-form-controls">
            @Html.EditorFor(model => model.sueldo, new { htmlAttributes = new { @class = "uk-input", @placeholder="0.00" } })
            @Html.ValidationMessageFor(model => model.sueldo, "", new { @class = "uk-text-danger" })
        </div>
    </div>

    <div class="uk-margin">
        <label class="uk-form-label" for="form-horizontal-text"> Compensación: </label>
        <div class="uk-form-controls">
            @Html.EditorFor(model => model.compensacion, new { htmlAttributes = new { @class = "uk-input", @placeholder="0.00" } })
            @Html.ValidationMessageFor(model => model.compensacion, "", new { @class = "uk-text-danger" })
        </div>
    </div>

    <div class="uk-margin">
        <label class="uk-form-label" for="form-horizontal-text"> Descuento: </label>
        <div class="uk-form-controls">
            @Html.EditorFor(model => model.descuento, new { htmlAttributes = new { @class = "uk-input", @placeholder="0.00" } })
            @Html.ValidationMessageFor(model => model.descuento, "", new { @class = "uk-text-danger" })
        </div>
    </div>

    <div class="uk-margin">
        <label class="uk-form-label" for="form-horizontal-text"> Percepción bruta: </label>
        <div class="uk-form-controls">
            @Html.EditorFor(model => model.percepcion, new { htmlAttributes = new { @class = "uk-input", @placeholder="0.00" } })
            @Html.ValidationMessageFor(model => model.percepcion, "", new { @class = "uk-text-danger" })
        </div>
    </div>

    <div class="uk-margin">
        <label class="uk-form-label" for="form-horizontal-text"> Pago realizado: </label>
        <div class="uk-form-controls">
            @Html.DropDownListFor(model => model.pagado, new[] { new SelectListItem { Text = "Sí", Value = "1" }, new SelectListItem { Text = "No", Value = "0" } }, new { @class = "uk-select" })
            @Html.ValidationMessageFor(model => model.pagado, "", new { @class = "uk-text-danger" })
        </div>
    </div>

    <div class="uk-margin">
        <label class="uk-form-label" for="form-horizontal-text"> </label>
        &nbsp;&nbsp;&nbsp; <input type="submit" value="Crear" class="uk-button uk-button-primary" />
    </div>
</div>
}

<div>
    @Html.ActionLink("Regresar a la lista", "Index", "SalaryTab", null, new { @class = "uk-button uk-button-default" })
</div>
